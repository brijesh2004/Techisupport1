                   .wheel{
             position: absolute;
             width: 500px;
             height: 500px;
             border: 2px solid black;
             border-radius: 50%;
             margin-left: 50px;
              animation-name: wheel-spin;
              animation-duration: 10s;
              animation-iteration-count: infinite;
              animation-timing-function: linear;
          }

          .line{
              position: absolute;
             width: 50%;
              height: 2px;
             left: 50%;
             top:50%;
             background-color: black;
             transform-origin: 0% 0%;
         }

         .line:nth-of-type(1){
             transform: rotate(0deg);
         }
         .line:nth-of-type(2){
             transform: rotate(60deg);
         }
         .line:nth-of-type(3){
             transform: rotate(120deg);
         }
         .line:nth-of-type(4){
            transform: rotate(180deg);
         }
         .line:nth-of-type(5){
             transform: rotate(240deg);
         }
         .line:nth-of-type(6){
             transform: rotate(300deg);
          }

         .cabin{
             position: absolute;
             width: 80px;
             height: 100px;
             border: 2px solid;
             background-color: red;
             transform-origin:50% 0% ;
             animation: cabin-animation 10s ease-in-out infinite;

           }

            .cabin:nth-of-type(1){
             right: 459.5px;
                top: 50%;
                }
             .cabin:nth-of-type(2){
               right: 17%;
            top: 93.5%;
         }
         .cabin:nth-of-type(3){
         right: 67%;
         top: 93.5%;
         }
         .cabin:nth-of-type(4){
            right: -8.5%;
            top: 50%;
            }
            .cabin:nth-of-type(5){
                right: 17%;
                top: 7%;
                }
                .cabin:nth-of-type(6){
                    right: 338px;
                    top: 7%;
                    }
        @keyframes wheel-spin {
            0%{
                transform: rotate(0deg);
            }
            100%
            {
                transform: rotate(360deg);
            }
        }

        @keyframes cabin-animation {
            0%{
                transform: rotate(0deg);
                background-color: pink;

            }
            50%{
                background-color:rgb(153, 42, 153);
            }
            75%{
                background-color: rgb(192, 255, 156);
            }
            100%{
                transform: rotate(-360deg);
            }
