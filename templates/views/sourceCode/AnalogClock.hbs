    <div class="code">
        <pre>
        
           &lt;!DOCTYPE html&gt;

         &lt;html&gt;
         &lt;head&gt;
          &lt;title&gt;Clock &lt;/title&gt;
          &lt;style&gt;
          #clockContainer{
          position:relative;
          margin:auto;
          width:40vw;
          height:40vw;
          background:url('clock.png') no-repeat;
          background-size:100%;
          }


         #hour,#minute, #second{
         position:absolute;
         background:black;
         border-radius:10px;
         transform-origin:bottom;
         }

         #hour{
         width:1.4%;
         height:23%;
         top:27%;
         background:green;
         left:49.5%;
         }

        #minute{
        width:1.2%;
        height:27%;
        top:23%;
        left:49.5%;
        opacity:0.8;
        background:yellow;
        }

        #second{
        width:1%;
        height:32%;
        top:18%;
        left:49.5%;
        background:blue;
        opacity:0.8;


        }

         &lt;/style&gt;
        &lt;script&gt;
          setInterval(() => {
         d = new Date();
          htime = d.getHours();
          mtime = d.getMinutes();
            stime = d.getSeconds();
           hrotation = 30*htime + mtime/2;
           mrotation =6*mtime;
                srotation =6*stime;

           hour.style.transform=`rotate(${hrotation}deg)`;
           minute.style.transform=`rotate(${mrotation}deg)`;
             second.style.transform=`rotate(${srotation}deg)`;

            },1000);

            &lt;/script&gt;
            &lt;/head&gt;

            &lt;body&gt;



            &lt;div id="clockContainer"&gt;
            &lt;div id="hour" &gt;</div&gt;
            &lt;div id="minute" &gt;</div&gt;
            &lt;div id="second" &gt;</div&gt;
            &lt;/div&gt;



               &lt;/body&gt;
