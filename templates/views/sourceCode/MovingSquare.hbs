    <div class="code">
        <pre>
       *{
      margin: 0;
       padding: 0;
      }
          body{
            background-color: rgb(13, 13, 15);
              }

           .sqaure1{
               position: absolute;
               width: 350px;
               height: 350px;
  
               left: 36%;
               top: 30%;
               background-color: green;
               opacity: 0.8;
               border: 1px solid green;
  
                animation: rotate 10s linear infinite;
            }

           .sqaure2{
               position: absolute;
               width: 300px;
               height: 300px;
               left: 38%;
               top: 35%;
               background-color: rgb(216, 198, 35);
    
               opacity: 0.8;
               transform: rotate(45deg);
               animation: rotate1 3s linear infinite;
           }
           .sqaure3{
               position: absolute;
               width: 250px;
               height: 250px;
               left: 40%;
               top: 38%;
              background-color: red;
    
              opacity: 0.8;
              transform: rotate(60deg);
              animation: rotate2 3s linear infinite;
          }

          .sqaure4{
              position: absolute;
              width: 200px;
              height: 200px;
              left: 42%;
              top: 41%;
              background-color: blue;
    
             opacity: 0.8;
             transform: rotate(60deg);
             animation: rotate1 3s linear infinite;
         }

         .sqaure5{
             position: absolute;
             width: 150px;
             height: 150px;
             left: 44%;
             top: 44%;
             background-color: palevioletred;
    
             opacity: 0.8;
             transform: rotate(60deg);
             animation: rotate2 3s linear infinite;
         }
         .sqaure6{
             position: absolute;
             width: 100px;
             height: 100px;
             left: 45%;
             top: 47%;
             background-color: rgb(19, 244, 252);
    
                opacity: 0.8;
                transform: rotate(60deg);
                animation: rotate1 3s linear infinite;
            }


            @keyframes rotate{
               to{
                transform: rotate(0);
               }
               from{
                transform: rotate(360deg);
               }
          }
          @keyframes rotate1{
              to{
               transform: rotate(45deg);
              }
              from{
               transform: rotate(-45deg);
              }
           }
           @keyframes rotate2{
              to{
               transform: rotate(-45deg);
              }
              from{
               transform: rotate(45deg);
              }
           }
        </pre>
